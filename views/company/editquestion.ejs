<script>

    $(function() {

        // Setup form validation on the #register-form element
        $("#updatequestion").validate({
        
            // Specify the validation rules
            rules: {
               
                category_id: {
                    required: true,
                },
                question: {
                    required: true,
                },
                a: {
                    required: true,
                },
                b: {
                    required: true,
                },
                c: {
                    required: true,
                },
                d: {
                    required: true,
                },
            },
            
            // Specify the validation error messages
            messages: {

              category_id: "Category is required",
              question: "Question is required",
              a: "Option A is required",
              b: "Option B is required",
              c: "Option C is required",
              d: "Option D is required",
            },
            
            submitHandler: function(form){
                $.ajax({
                    url: form.action,
                    type: form.method,
                    data: $(form).serialize(),
                    success: function(response) {
                        //console.log(response)
                        if(response == 'success'){
                            window.location='/company/question'
                            $("#toast-success").html("Successfully, question has been update");
                            $("#toaster").fadeIn();

                        }
                        else if(response == 'error'){
                          $("#toast-error").html('Something went worng !');
                          $("#toasterError").fadeIn();
                        }
                        setTimeout(function() {
                          $("#toaster").fadeOut();
                          $("#toasterError").fadeOut();
                        }, 3000);
                    }            
                });		
            }
           });
    });
     
</script>